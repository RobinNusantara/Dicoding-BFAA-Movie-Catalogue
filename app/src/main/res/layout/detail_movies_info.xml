<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_movie_poster"
        android:layout_width="140dp"
        android:layout_height="175dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/str_movie_poster"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/item_rectangle_citylight" />

    <TextView
        android:id="@+id/txt_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxEms="10"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_movie_poster"
        app:layout_constraintTop_toTopOf="@+id/img_movie_poster"
        tools:text="@string/str_movie_title" />

    <TextView
        android:id="@+id/txt_movie_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_title"
        tools:text="@tools:sample/date/mmddyy" />

    <RatingBar
        android:id="@+id/rate_movie"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:progressTint="@color/colorNanohanachaGold"
        app:layout_constraintStart_toEndOf="@+id/img_movie_poster"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_release_date" />

    <TextView
        android:id="@+id/txt_movie_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/rate_movie"
        app:layout_constraintTop_toBottomOf="@+id/rate_movie"
        tools:text="1h 45m" />

    <TextView
        android:id="@+id/txt_movie_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorNanohanachaGold"
        app:layout_constraintBottom_toBottomOf="@+id/rate_movie"
        app:layout_constraintStart_toEndOf="@+id/rate_movie"
        app:layout_constraintTop_toTopOf="@+id/rate_movie"
        tools:text="0/0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/img_movie_poster" />

    <TextView
        android:id="@+id/txt_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_genre"
        tools:text="@string/str_lorem" />

    <TextView
        android:id="@+id/txt_similar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/str_similar_like"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_movie_overview"
        app:layout_constraintTop_toBottomOf="@+id/txt_movie_overview" />

    <TextView
        android:id="@+id/txt_movie_similar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_similar"
        app:layout_constraintStart_toEndOf="@+id/txt_similar"
        app:layout_constraintTop_toTopOf="@+id/txt_similar"
        tools:text="@string/str_movie_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movies_similar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_similar" />

</androidx.constraintlayout.widget.ConstraintLayout>