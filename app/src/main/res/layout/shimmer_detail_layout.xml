<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/thumbnal_backdrop"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/thumbnal_poster"
        android:layout_width="140dp"
        android:layout_height="175dp"
        android:layout_below="@id/thumbnal_backdrop"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_rectangle_silver" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnal_backdrop"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/thumbnal_poster"
        android:orientation="vertical">

        <View
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnal_poster"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="380dp"
            android:layout_height="10dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="360dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="380dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="360dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="380dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />

        <View
            android:layout_width="360dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_rectangle_silver" />
    </LinearLayout>

</RelativeLayout>